package ex01;

import java.util.Scanner;

public class ex02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int x, i=0, sum=0, average=0;
		Scanner input = new Scanner(System.in);
		
		do 
		{
			System.out.print("정수입력 : ");
			x = input.nextInt();
			if(x==0)
				break;
			sum = sum + x;
			average = (int)sum/i;
			System.out.printf("합 : %d", "평균 : %d\n", sum, average);
			i++;
		} while (true);
		
		System.out.print("종료");
	}

}
